<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:text="Name"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="92dp"
            android:gravity="center_horizontal"
            android:text="Description"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="164dp"
            android:gravity="center_horizontal"
            android:text="Language"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="224dp"
            android:gravity="center_horizontal"
            android:text="Release Date"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <EditText
            android:id="@+id/editTextName"
            android:hint="@string/editName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextDesc"
            app:layout_constraintEnd_toEndOf="@+id/editTextDesc"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>

    <EditText
            android:hint="@string/description"
            android:id="@+id/editTextDesc"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:textAllCaps="false"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/radioGroupLanguage"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/editTextName"/>

    <RadioGroup
            android:id="@+id/radioGroupLanguage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"

            android:layout_marginEnd="16dp"
            android:layout_marginBottom="293dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextDesc">

        <RadioButton
                android:id="@+id/radioButtonEng"
                style="@android:style/Widget.CompoundButton.RadioButton"
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:text="English"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="180dp"/>

        <RadioButton
                android:id="@+id/radioButtonTamil"
                style="@android:style/Widget.CompoundButton.RadioButton"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Tamil"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="274dp"
                tools:layout_editor_absoluteY="180dp"/>

        <RadioButton
                android:id="@+id/radioButtonMalay"
                style="@android:style/Widget.CompoundButton.RadioButton"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:text="Malay"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="188dp"
                tools:layout_editor_absoluteY="180dp"/>

        <RadioButton
                android:id="@+id/radioButtonChinese"
                style="@android:style/Widget.CompoundButton.RadioButton"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:text="Chinese"
                android:textSize="12sp"
                tools:layout_editor_absoluteX="102dp"
                tools:layout_editor_absoluteY="180dp"/>
    </RadioGroup>

    <EditText
            android:id="@+id/editTextDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:hint="@string/releaseDate"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/editTextDesc"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5"/>

    <CheckBox
            android:id="@+id/checkBoxM18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="9dp"
            android:text="Not suitable for all audience"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextDate"/>

    <Button
            android:id="@+id/buttonAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="16dp"
            android:text="Add movie"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxM18" android:onClick="buttonAdd"
            app:layout_constraintHorizontal_bias="0.0"/>
    <CheckBox
            android:text="Language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxLanguage"
            app:layout_constraintStart_toStartOf="@+id/checkBoxM18"
            app:layout_constraintBaseline_toBaselineOf="@+id/checkBoxViolence" android:visibility="invisible"/>
    <CheckBox
            android:text="Violence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxViolence" android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBoxM18"
            app:layout_constraintStart_toEndOf="@+id/checkBoxLanguage" android:visibility="invisible"/>

</android.support.constraint.ConstraintLayout>